# alias - terminal
alias c="clear"
alias e=$EDITOR
alias h='history | grep '
alias r="source $HOME/.zshrc"
alias x="exit"

# alias - edit config terminal
alias zshrc="nn $HOME/.zshrc"
alias aliases="nn $CONFIG/zsh/.zsh_aliases"
alias func="nn $CONFIG/zsh/.zshrc_func"

# alias - date
alias da='date "+%Y-%m-%d %A %T %Z"'

# alias - *top
alias top="btop"
alias htop="btop"

# alias - change directory
alias home='cd $HOME'
alias cd='z'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# alias - reboot
alias rebootsafe='sudo shutdown -r now'
alias rebootforce='sudo shutdown -r -n now'

# alias - disk usage
alias diskspace="du -S | sort -n -r |more"
alias tree='tree -CAhF --dirsfirst'
alias treed='tree -CAFd'

# alias - rm to trash
alias rm='trash -v'

# alias - archive
alias mktar='tar -cvf'
alias mkbz2='tar -cvjf'
alias mkgz='tar -cvzf'
alias untar='tar -xvf'
alias unbz2='tar -xvjf'
alias ungz='tar -xvzf'

# alias - logs
alias logs="sudo find /var/log -type f -exec file {} \; | grep 'text' | cut -d' ' -f1 | sed -e's/:$//g' | grep -v '[0-9]$' | xargs tail -f"
